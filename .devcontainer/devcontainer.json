// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates
{
	"name": "SunshineCloud-Universal-Systemd-Desktop",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "sunshinecloud007/sunshinecloud-universal-systemd-desktop:amd64-bookworm",
	// "build": {
	// 	"dockerfile": "Dockerfile",
	// 	// Use 'context' to specify the build context. More info: https://aka.ms/devcontainers-dockerfile#context
	// 	"context": ".",
	// 	// Use 'args' to pass build arguments. More info: https://aka.ms/devcontainers-dockerfile#args
	// 	"args": {
	// 		// "VARIANT": "8"
	// 	}
	// },
	
	// Override the default command to start systemd
	"overrideCommand": false,
	
	"runArgs": [
		"--privileged",
		"--cgroupns=host",
		"--tmpfs=/tmp",
		"--tmpfs=/run",
		"--tmpfs=/run/lock"
	],
	"mounts": [
		"source=/sys/fs/cgroup,target=/sys/fs/cgroup,type=bind"
	],
	"features": {},
	// "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/SunshineCloud-Universal-Systemd-Desktop,type=bind,consistency=cached",
	// "workspaceFolder": "/workspaces/SunshineCloud-Universal-Systemd-Desktop",

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// 3389: xRDP (Remote Desktop), 22: SSH
	"forwardPorts": [3389, 22],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "systemctl status || true",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ms-vscode-remote.remote-containers",
				"redhat.vscode-yaml",
				"ms-vscode.makefile-tools"
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash"
			}
		}
	},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "matrix0523",
	
	// Disable init since systemd will be PID 1
	"init": false,
	
	// Ensure container has proper capabilities for systemd
	"capAdd": [
		"SYS_ADMIN",
		"SYS_BOOT"
	],
	
	// Security options for systemd
	"securityOpt": [
		"apparmor:unconfined",
		"seccomp=unconfined"
	]
}
